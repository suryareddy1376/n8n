# =====================================================
# DCMS Backend Environment Configuration
# =====================================================

# Server Configuration
NODE_ENV=development
PORT=3001
API_VERSION=v1

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Gemini AI Configuration
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-pro
AI_CONFIDENCE_THRESHOLD=0.75

# n8n Webhook Configuration
N8N_WEBHOOK_BASE_URL=https://your-n8n-instance.app.n8n.cloud/webhook
N8N_WEBHOOK_SECRET=your-webhook-secret-token

# Security
JWT_SECRET=your-jwt-secret-for-additional-validation
WEBHOOK_SECRET=your-webhook-validation-secret
CORS_ORIGINS=http://localhost:3000,https://your-frontend-domain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug
LOG_FORMAT=combined

# File Upload
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf

# SLA Configuration
SLA_CHECK_INTERVAL_MINUTES=15
SLA_WARNING_HOURS_BEFORE=6
